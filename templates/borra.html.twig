<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Búsqueda de Usuarios</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
        <link href="{{asset('css/admin.css')}}" rel="stylesheet">
        <style>
        th {
            text-align: center;
        }
        .glyphicon {
            margin-right: 10px;
        }
        .crud-table {
            max-width: 1100px;
            padding: 40px 0;
        }
        .form-alert {
            margin-top: 10px;
        }
        .form-inline {
            margin-bottom: 20px;
        }
        #buscar{
            background-color: #E1E1E1;
            color: black;
        }
        #limpiar{
            background-color: #C7C7C7;
            color: black;
        }
    </style>
    </head>
<body>
    {% include "headeradmin.html.twig" %}
    <div id="content-wrapper">
    <div class="container">
        <div class="clearfix">
            <div class="form-inline pull-right">
                Search by name:
                <div class="form-group">
                    <input type="text" placeholder="Type name to search" class="form-control">
                </div>
            </div>
            <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Nombre Completo</th>
                    <th>Email</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody>
                {% for usuario in usuarios %}
                    <tr>
                        <td style="text-align:center;">{{usuario.usuario}}</td>
                        <td style="text-align:center;">{{usuario.nombrecompleto}}</td>
                        <td style="text-align:center;">{{usuario.email}}</td>
                        <td style="text-align:center;"><a href="{{path('borraid',{id: usuario.id})}}"><button class="btn btn-danger">Borrar</button></a></td>
                    </tr>
                {% endfor %}
                <!-- Repeat the above tr block for each user -->
                <tr>
                    <td colspan="2"><b>Total</b></td>
                    <td class="text-center">{{usuarios|length}}</td>
                    <td colspan="3"></td>
                </tr>
            </tbody>
        </table>
        </div>
    </div>
</body>
</html>