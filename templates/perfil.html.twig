{% include "header.html.twig" %}
<input type="hidden" id="user" value="{{id}}"/>
<div class="profile-container">
        <div class="profile-header">
            <div class="hola" style="display:flex;">
                <img class="profile-pic" src="{{ asset('imagenes/' ~ app.user.foto) }}">
                <p style="margin-left: 10%;margin-top:6%;font-size: 19px;"><strong>{{app.user.usuario}}</strong></p>
            </div>
            
            <div class="profile-info">
                <div class="datos">
                    <p><strong>Publicaciones</strong></p>
                    <p>{{app.user.publicaciones|length}}</p>
                </div>
                <div class="datos">
                    <p><strong>Seguidores</strong></p>
                    <p id="segui">{{app.user.seguidores|length}}</p>
                </div>
                <div class="datos">
                    <p><strong>Siguiendo</strong></p>
                    <p id="seguidoo">{{app.user.seguidos|length}}</p>
                </div>
            </div>
        </div>
        <div style="margin-top: 8%;">
                {% if app.user.descripcion %}
                    <p style="margin-left: 3%; margin-top: 5%;">
                        {{app.user.descripcion}}
                    </p>
                {% endif %}
        </div>
        
        {% for publicacion in app.user.publicaciones %}
            {% if publicacion.tipo.id == 1 %}
                <div class="post">
                <input class="id" type="hidden" value="{{publicacion.id}}"/>
                <div class="post-header">
                    {% if publicacion.Usuario.foto %}
                        <img src="{{ asset('imagenes/'~ publicacion.Usuario.foto) }}" alt="Perfil">
                    {% else %}
                        <img src="{{ asset('imagenes/perfil.png') }}" alt="Perfil">
                    {% endif %}
                    <div class="username">{{publicacion.Usuario.usuario}}</div>
                </div>
                <div class="post-image">
                    <span class="prev-arrow">&#9664;</span>
                    <div class="image-slide">
                        <img src="{{ asset('imagenes/' ~ publicacion.archivos[0]) }}" alt="Publicación" class="img-fluid">
                    </div>
                    <span class="next-arrow">&#9654;</span>
                </div>
                <div class="post-footer">
                    <div>
                        <img class="comentario" src="{{asset('imagenes/comentario.png')}}">
                    </div>
                    <div>
                        {% set found = false %}
                        {% set i = 0 %}
                        {% for int in publicacion.usuarioInteracciones %}
                            {% if int.publicacion == publicacion and int.interaccion.id == 4 and int.usuario == app.user %}
                                <img class="guardadoo" src="{{asset('imagenes/guardar.png')}}">
                                {% set found = true %}
                            {% endif %}
                        {% endfor %}

                        {% for int in publicacion.usuarioInteracciones %}
                            {% if int.publicacion == publicacion and int.interaccion.id == 4 %}
                                {% set i = i + 1 %}
                            {% endif %}
                        {% endfor %}

                        {% if not found %}
                            <img class="guardado" src="{{asset('imagenes/guardado.png')}}">
                        {% endif %}
                        <p class="likess"> {{i}} </p>
                    </div>
                    <div>
                        {% set found = false %}
                        {% set ilike = 0 %}
                        {% for int in publicacion.usuarioInteracciones %}
                            {% if int.publicacion == publicacion and int.interaccion.id == 3 %}
                                {% set ilike = ilike + 1 %}
                            {% endif %}
                        {% endfor %}
                        {% for int in publicacion.usuarioInteracciones %}
                            {% if int.publicacion == publicacion and int.interaccion.id == 3 and int.usuario == app.user %}
                                <img class="megusta" src="{{asset('imagenes/corazon.png')}}">
                                <p class="likess"> {{ilike}} </p>
                                {% set found = true %}
                            {% endif %}
                        {% endfor %}


                        {% if not found %}
                            <img class="like" src="{{asset('imagenes/like.png')}}">
                            <p class="likess"> {{ilike}} </p>
                        {% endif %}
                    </div>
                    <div>
                        {% set found = false %}
                        {% set irt = 0 %}
                        {% for int in publicacion.usuarioInteracciones %}
                            {% if int.publicacion == publicacion and int.interaccion.id == 5 %}
                                {% set irt = irt + 1 %}
                            {% endif %}
                        {% endfor %}
                        {% for int in publicacion.usuarioInteracciones %}
                            {% if int.publicacion == publicacion and int.interaccion.id == 5 and int.usuario == app.user %}
                                <img class="rts" src="{{asset('imagenes/retweet.png')}}">
                                <p class="likess"> {{irt}} </p>
                                {% set found = true %}
                            {% endif %}
                        {% endfor %}

                        {% if not found %}
                            <img class="rt" src="{{asset('imagenes/retweet.png')}}">
                            <p class="likess"> {{irt}} </p>
                        {% endif %}
                    </div>
                </div>
                <br>
                <div style="margin-left: 3%; margin-bottom: 3%;">
                    {{publicacion.descripcion|raw}}
                </div>
            </div>
            <hr>
            {% endif %}
        {% endfor %}
