<!-- register.component.html -->
<html>
    <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Mi Red Social</title>
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    </head>
    <style>
    @media (max-width: 500px){
      .register-container{
        width: 80%;
        margin-left: 10%;
      }
    }
      .form-row {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    margin-bottom: 15px;
  }
  
  .form-group {
    flex: 0 0 48%;
  }
  
  .label {
    display: block;
    font-size: 14px;
    color: #333;
    margin-bottom: 5px;
  }
  
  .input {
    width: 100%;
    padding: 10px;
    font-size: 14px;
    border: 1px solid #ccc;
    border-radius: 5px;
    box-sizing: border-box;
  }
  
  .register-button {
    background-color: #28a745;
    color: #fff;
    padding: 12px;
    font-size: 16px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    margin-top: 10px;
  }
  
  .register-button:hover {
    background-color: #218838;
  }
    </style>
  </style>
    <body>
    <div class="register-container">
        <div class="register-card">
        <div class="register-header">
            <img id="img" src="{{asset('imagenes/logoredsocial.png')}}" alt="Logo" class="logo" style="border: 1px solid black;width: 20%; margin-left:45%;margin-top:5%;border-radius:50%;margin-bottom: 5%;">
            <h2 class="register-heading">Registro</h2>
        </div>
        <p class="register-instructions">Crea tu cuenta ingresando la siguiente información.</p>
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        <form method="POST" style="margin-left: 1%;">
            <div class="form-row">
            <div class="form-group">
                <label for="username">Nombre de usuario</label>
                <input type="text" id="username" name="username" class="input">
            </div>
    
            <div class="form-group">
                <label for="email">Correo electrónico</label>
                <input type="text" id="email" name="email" class="input">
            </div>
            </div>
    
            <div class="form-row">
            <div class="form-group">
                <label for="password">Contraseña</label>
                <input type="password" id="password" name="password" class="input">
            </div>
    
            <div class="form-group">
                <label for="fullName">Nombre completo</label>
                <input type="text" id="fullName" name="fullName" class="input">
            </div>
            </div>
    
            <div class="form-row">
            <div class="form-group">
                <label for="gender">Género</label>
                <select id="gender" name="gender" class="input">
                <option value="male">Masculino</option>
                <option value="female">Femenino</option>
                <option value="other">Otro</option>
                </select>
            </div>
            </div>

            
    
            <input type="submit" class="register-button" value="Registrar">
        </form>
    
        <div class="register-footer">
            <p>¿Ya tienes una cuenta? <a style="color: #3498db;text-decoration:none" href="{{path('app_login')}}">Inicia sesión</a></p>
        </div>
        </div>
    </div>
    </body>
</html>